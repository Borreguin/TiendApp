<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.borreguin.tiendapp.Act_ClientDetails"
    tools:showIn="@layout/activity_act_client_details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/title"
                android:id="@+id/txt_clientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textSize="22sp"
                android:textStyle="bold"
                android:text="@string/name" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="italic"
                android:text="@string/description"
                android:textSize="19sp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                >
            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn_addDeft"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:background="@android:drawable/ic_input_add"

                    />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/btn_lessDeft"
                    android:layout_toRightOf="@+id/btn_addDeft"
                    android:background="@drawable/minus"
                    />


                <TextView
                    android:textColor="@color/title"
                    android:id="@+id/txt_debtTag"
                    android:layout_toRightOf="@+id/btn_lessDeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:text="@string/debt" />

                <TextView
                    android:textColor="@color/title"
                    android:id="@+id/txt_debt"
                    android:gravity="right"
                    android:layout_toRightOf="@+id/txt_debtTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textSize="24sp"
                    android:textStyle="italic"
                    android:text="@string/zero" />


            </RelativeLayout>


            <GridView
                android:numColumns="auto_fit"
                android:gravity="left"
                android:columnWidth="100dp"
                android:stretchMode="columnWidth"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/grid_item_values"
                />

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="?android:attr/windowBackground"
                app:menu="@menu/navigation" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>
