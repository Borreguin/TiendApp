<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.borreguin.tiendapp.Act_SearchClient">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@mipmap/generic_icon"
            android:id="@+id/child_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/child_text"
            android:paddingLeft="45sp"
            android:paddingTop="12sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_toRightOf="@+id/child_icon"
            android:text="@string/name"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:id="@+id/btnDeleteClient"
            android:background="@drawable/trash_20"/>


        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/btnDeleteClient"
            android:background="@drawable/edit_20"
            android:id="@+id/editClient"/>

    </RelativeLayout>
</ScrollView>